runtime! archlinux.vim

" directory
set directory=/home/wiredancer/.vim

" wrap searches
set wrapscan

" tab and identation
set tabstop=4
set noexpandtab
set smarttab
set shiftwidth=4
set backspace=indent,eol,start
set autoindent
set smartindent

" show commands
set showcmd

" line and col pos
set ruler

" line numbers
set number

filetype plugin on
syntax on
